<%= simple_form_for(@currency) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :rounding %>
    <%= f.input :active %>
    <%= f.input :accuracy %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
