<ul class="breadcrumb">
  <li>
    <%= link_to "Wolfpack", root_path %> <span class="divider">/</span>
  </li>
  <li class="active">User</li>
</ul>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Time Zone</th>
    <th>Created at</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= user.created_at %></td>
      <td>
        <%= link_to edit_user_path(user), :class => 'btn btn-mini btn-primary' do %>
          Edit <i class='icon-pencil icon-white'></i>
        <% end %>
        <%= link_to user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' do %>
        Delete <i class='icon-trash icon-white'></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to new_user_path, :class => 'btn btn-primary' do %>
  New <i class="icon-plus icon-white"></i>
<% end %>
