<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :manufacturing_lead %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.input :registration_no %>
    <%= f.association :currency %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
